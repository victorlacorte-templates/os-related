# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

# JSON files contain newlines inconsistently
[*.json]
insert_final_newline = false

[*.md]
indent_size = 4
insert_trailing_whitespace = false

[*.py]
indent_size = 4

[CHANGELOG.md]
indent_size = false

# Don't wrap lines for Git commit messages
[COMMIT_EDITMSG]
max_line_length = 0

[Makefile]
indent_style = tab
